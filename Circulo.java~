/*
 * Clase para obtener resultados de area y perimetro de un circulo.
 */
public class Circulo {
static final double PI = 3.1415;
private double radio;

 //metodo area
 public double area () {

	double area = 0;
	area = PI * (this.getRadio() * this.getRadio());
	return area;
 }



 //metodo perimetro
 public double peri () {

	double peri = 0;
	peri = 2 * PI * this.getRadio();
	return peri;
 }

	public double getRadio() {

		return this.radio;
	}

	public void setRadio(double radio) {

		this.radio = radio;
	}
}
